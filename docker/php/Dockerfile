# ğŸ“¦ Use a imagem oficial do PHP com Apache
FROM php:8.2-apache as development
WORKDIR /var/www/html
RUN echo "ğŸš€ Configurando ambiente de trabalho..."

# ğŸ› ï¸ Habilita o mod_rewrite do Apache para suportar reescrita de URL via .htaccess
RUN echo "ğŸš€ Habilitando mod_rewrite do Apache..." && a2enmod rewrite

# ğŸ› ï¸ Instala as ferramentas de compilaÃ§Ã£o necessÃ¡rias
RUN echo "ğŸš€ Instalando ferramentas de compilaÃ§Ã£o..." && apt-get update && apt-get install -y \
    gcc \
    make \
    autoconf \
    curl \
    mariadb-client \
    && rm -rf /var/lib/apt/lists/*

# ğŸ› ï¸ Instala extensÃµes e dependÃªncias necessÃ¡rias
RUN echo "ğŸš€ Instalando extensÃµes e dependÃªncias necessÃ¡rias..." && apt-get update && apt-get install -y \
    libbz2-dev \
    libcurl4-openssl-dev \
    libxml2-dev \
    libssl-dev \
    libldap-dev \
    libpcre3-dev \
    libmariadb-dev \
    libonig-dev \
    libpng-dev \
    libjpeg-dev \
    libzip-dev \
    zip \
    unzip \
    libicu-dev \
    libldap2-dev \
    libgd-dev \
    libpq-dev

# ğŸ› ï¸ Remove extensÃµes PHP padrÃ£o
RUN echo "ğŸš€ Removendo extensÃµes PHP padrÃ£o..." && docker-php-ext-install -j$(nproc) \
    mysqli \
    pdo_mysql \
    ctype \
    soap \
    session \
    dom

# ğŸ› ï¸ Instala extensÃµes PHP adicionais
RUN echo "ğŸš€ Instalando extensÃµes PHP adicionais..." && docker-php-ext-install -j$(nproc) \
    bcmath \
    zip \
    intl \
    gd \
    bz2 \
    mbstring \
    pgsql \
    opcache

# ğŸ› ï¸ Define o diretÃ³rio raiz do documento Apache
ENV APACHE_DOCUMENT_ROOT=/var/www/html/public
RUN echo "ğŸš€ Definindo diretÃ³rio raiz do documento Apache..." \
    && sed -ri -e 's!/var/www/html!/var/www/html/public!g' /etc/apache2/sites-available/*.conf \
    && sed -ri -e 's!/var/www/!/var/www/html/public!g' /etc/apache2/apache2.conf /etc/apache2/conf-available/*.conf

# ğŸ› ï¸ Habilita os mÃ³dulos Apache
RUN echo "ğŸš€ Habilitando mÃ³dulos Apache..." && a2enmod rewrite setenvif

# ğŸ“„ Instala o Composer
RUN echo "ğŸš€ Instalando Composer..." \
    && curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# ğŸ“„ Copia os arquivos do projeto para o container
COPY . /var/www/html
RUN echo "ğŸš€ Copiando arquivos do projeto para o container..."

# ğŸ› ï¸ Instala as dependÃªncias do Composer
RUN composer install

# ğŸ› ï¸ Ajusta as permissÃµes dos arquivos e diretÃ³rios
RUN echo "ğŸš€ Ajustando permissÃµes dos arquivos e diretÃ³rios..." \
    && chown -R www-data:www-data /var/www/html \
    && find /var/www/html -type d -exec chmod 755 {} \; \
    && find /var/www/html -type f -exec chmod 644 {} \;


# Expose ports
EXPOSE 80
RUN echo "ğŸš€ Expondo porta 80..."

